<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoSobres">

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="423dp"
        android:layout_height="124dp"
        android:scaleX="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red" />

    <EditText
        android:id="@+id/txtMontoSobre"
        android:layout_width="385dp"
        android:layout_height="60dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Monto inicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreSobre" />

    <TextView
        android:id="@+id/lblSobres"
        android:layout_width="228dp"
        android:layout_height="78dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/archivo_black"
        android:text="Sobres de Ahorro"
        android:textAllCaps="true"
        android:textDirection="firstStrongRtl"
        android:textIsSelectable="false"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNombreSobre"
        android:layout_width="385dp"
        android:layout_height="60dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcvSobres" />

    <Button
        android:id="@+id/btnCrearSobre"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="116dp"
        android:backgroundTint="@color/red"
        android:text="Crear Sobre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMontoSobre" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSobres"
        android:layout_width="413dp"
        android:layout_height="373dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView21" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="153dp"
        android:layout_height="97dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/lblSobres"
        app:layout_constraintTop_toTopOf="@+id/imageView21"
        app:srcCompat="@drawable/logoblanco" />

</androidx.constraintlayout.widget.ConstraintLayout>