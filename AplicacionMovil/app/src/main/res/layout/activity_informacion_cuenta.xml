        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rcvHistorialCuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblInfoCuenta" />

    <TextView
        android:id="@+id/lblInfoCuenta"
        android:layout_width="166dp"
